@require './util/animation'
@require './util/color'
@require './util/fonts'
@require './util/reset'
@require './components/header'
@require './components/footer'

html
    background-color mono-dark
body
    display flex
    flex-flow column nowrap
    justify-content space-between
    animation init ease 1s
    mar = 48px
    margin mar
    min-height "calc(100vh - %s * 2)" % mar

// headers ////////////////////////////////////////////////////////////////////

for v, i in (74 57 44 34)
    h{i+1}
        inter(unit(v, 'px'), alt, 700)
        margin-bottom unit(4 * i - 4, 'px')
    .subh{i+1}
        inter(unit(34 - 4 * i, 'px'), mono, 200, 1, 0.5em)
        margin-top -16px

// body text //////////////////////////////////////////////////////////////////

p
    inter(20px, mono-tint, 400,, -0.02em)
    line-height 24px
    margin-bottom 12px
    text-align justify
    b
        inter(20px, alt-tint, 700,, -0.02em)
    i
        inter(20px, mono-tint, 350, 1, -0.02em)
a
    text-decoration none
    inter(20px, alt-tint, 400)
    transition 0.2s
    &:hover
        inter(20px, alt, 700)
code
    display block
    ubuntu(12px, mono)
    line-height 16px
    background mono-shade
    padding 12px 16px
    border-radius 8px
    margin-bottom 12px
.center
    text-align center