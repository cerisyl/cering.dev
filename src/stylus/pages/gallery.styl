.gallery
  margin-bottom 16px
  &-object
    display block
    line-height 0
    max-width calc(50% - 4px)
    hover-highlight()
    position relative
    border-radius 4px
  &-inner
    width 100%
    height 100%
  &-image
    source, img
      width 100%
      border-radius 4px
  &-info
    flex(column, nowrap, center, center)
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background-color rgba(dark, 0.7)
    backdrop-filter blur(2px)
    border-radius 3px
    text-align center
    padding 8px
    pointer-events none
    opacity 0
    animate(opacity)
    border 1px solid rgba(lite, 0.5)
  &-object:hover .gallery-info
    opacity 1
  &-title
    text(14px, lite)
  &-desc
    text(10px, lite)