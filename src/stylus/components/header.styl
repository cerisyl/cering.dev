.header
  flex(row, nowrap, space-between, center)
  padding 24px
  background-color dark
  animate(outline)
  outline 0px solid main-dark
  outline 4px solid main-dark
  +laptop()
    background-color transparent
    transition none
    outline 0px solid main-dark

.logo
  display inline-block
  margin -8px
  padding 8px
  position relative
  &-small
    svg
      width 44px
      margin-bottom -4px
  &-full
    svg
      width 172px
      margin-bottom -4px
  &-text
    position absolute
    text(11px, lite-dark, bold, italic)
    letter-spacing 1.3px
    top 60px
    left 11px
    user-select none

.nav
  flex(column, nowrap)
  align-items space-between
  justify-content space-between
  position absolute
  right 0
  top calc(-100dvh + 94px)
  background-color rgba(dark, 0.97)
  backdrop-filter blur(4px)
  z-index -1
  width 100%
  animate(top)
  user-select none
  +laptop()
    flex(row, nowrap, space-around, center)
    position static
    background-color transparent
    backdrop-filter none
    z-index 0
    margin-left 20px
    margin-right -24px
  &-link
    head(20px, lite-head, 600)
    padding calc(-12px + (100dvh - 94px) / 7 / 2) 24px
    hover-color( rgba(dark-lite, 0.2) )
    +laptop()
      font-size 18px
      padding 10px 8px
      hover-color(transparent)
      underline(main-dark, 2px, 9px, calc(100% - 16px))
  &-dropdown
    display none
  &-active
    top 118px
  &-toggle
    margin -8px -12px -8px -8px
    padding 8px
    cursor pointer
    animate(margin)
    svg
      animate(width)
      width 40px
      margin-bottom -6px
      stroke lite
    +laptop()
      display none

.enlarge
  margin -8px -15px -8px -8px
  svg
    width 48px
