.bg
  position fixed
  width 100dvw
  height 100dvh
  left 0
  top 0
  z-index -99
  pointer-events none
  background-repeat repeat
  overflow hidden
  &-streams
    @extends .bg
    background-image url("../img/bgs/streams/bg.webp")
    &-overlay
      position fixed
      width 100dvw
      height 100dvh
      left 0
      top 0
      z-index -1
      pointer-events none
      background-repeat repeat
      overflow hidden
      opacity 0.15
      mix-blend-mode soft-light
      background-image url("../img/bgs/streams/texture.webp")
    &-obj
      position fixed
      z-index -98
      user-select none
      pointer-events none
      &1
        @extends .bg-streams-obj
        left calc(90dvw - 60dvh)
        top 40dvh
        mix-blend-mode luminosity
        animation move-ne 32s linear infinite alternate
        svg
          width 90dvh
      &2
        @extends .bg-streams-obj
        left -2dvw
        top -10dvh
        mix-blend-mode luminosity
        animation move-s 41s linear infinite alternate
        svg
          width 90dvh
      &3
        @extends .bg-streams-obj
        left 5dvw
        top -10dvh
        width 120dvh
        opacity 0.25
        mix-blend-mode darken
        animation move-cw 17s ease-out infinite
      &4
        @extends .bg-streams-obj
        left calc(100dvw - 60dvh)
        top 0dvh
        width 60dvh
        opacity 0.15
        mix-blend-mode exclusion
        animation move-cw 13s ease-in-out infinite reverse