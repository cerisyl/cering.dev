@keyframes pulse
  0%
    transform rotate(-20deg) scale(1.0)
  50%
    transform rotate(-20deg) scale(1.2)
  100%
    transform rotate(-20deg) scale(1.0)

@keyframes move-s
  0%
    transform translate(0px, 0px)
  100%
    transform translate(0dvw, 10dvh)

@keyframes move-ne
  0%
    transform translate(0px, 0px)
  100%
    transform translate(5dvw, -3dvh)

@keyframes move-cw
  0%
    transform translate(0px, 0px)
  25%
    transform translate(.2dvw, -.3dvh)
  50%
    transform translate(.4dvw, 0dvh)
  75%
    transform translate(.2dvw, .3dvh)
  100%
    transform translate(0dvw, 0dvh)